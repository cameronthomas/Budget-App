    link(rel="stylesheet", href="./styles/style.css")
  body
    include ./navbar.jade
    div(id="budgetsTableDiv")
      table(id="budgetTable" class="table table-striped") 
        thead
          tr
            th(scope="col")="Budget Name"
            th(scope="col")="Budget Amount"     
            th(scope="col")="Amount Used"     
            th(scope="col")="Amount left" 
        tbody(id="budgetsTableBody")
          include ./budgetsTable.jade
    include ./addBudgetModal.jade
    include ./addTransactionModal.jade
    include ./viewTransactionsModal.jade
